<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NWork.Pages.LoginPage"
             Title="Login"
			 WidthRequest="500"
			 HeightRequest="500">
	<Border>
		<Border.Shadow>
			<Shadow Brush="Black"
                Offset="5,5"
                Radius="5"
                Opacity="0.3" />
		</Border.Shadow>
		<VerticalStackLayout Spacing="10" BackgroundColor="White" Padding="10">
			<Label Text="Log in to Jira" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
			<Entry Placeholder="Username" />
			<Editor Placeholder="API token" HeightRequest="100"/>
			<Label Text="Manage API tokens" HorizontalTextAlignment="Center" TextColor="DodgerBlue" TextDecorations="Underline">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Tapped="ManageAPITokens"/>
				</Label.GestureRecognizers>
			</Label>
			<Button Text="Log in" Clicked="DoLogin"/>
		</VerticalStackLayout>
	</Border>
</ContentPage>